<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".number_of_people">

    <TextView
        android:id="@+id/textView"
        android:layout_width="172dp"
        android:layout_height="64dp"
        android:fontFamily="@font/nemukemedium"
        android:text="人数選択"
        android:textColor="#FFAE1717"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"
        tools:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/add_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:text="NEXT"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="128dp" />

    <RadioGroup
        android:layout_width="264dp"
        android:layout_height="363dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391">

        <RadioButton
            android:id="@+id/people5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="5人"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/people6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="6人"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/people7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="7人"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/people8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="8人"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/people9"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="9人"
            android:textSize="20dp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>